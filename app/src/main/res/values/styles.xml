<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Figma Title Style -->
    <style name="FigmaTitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Figma Placeholder Style -->
    <style name="FigmaPlaceholderStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Figma Tab Style -->
    <style name="FigmaTabStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- 등록 버튼 -->
    <style name="FigmaButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:backgroundTint">#2196F3</item> <!-- 파란색 -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item> <!-- 둥근 모서리 -->
    </style>

    <!-- 취소 버튼 -->
    <style name="FigmaButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:backgroundTint">#E0E0E0</item> <!-- 회색 -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>
