<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="17dp"
    android:background="#FAF6F3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

<!--    전체화면    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--      책장      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bookshelf_shelf"
                    android:id="@+id/shelf01">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#BFB74A"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="데\n뷔\n못\n하\n면\n죽\n는\n병\n걸\n림\n"
                        android:id="@+id/shelf01_book01"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#F1CDAB"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/shelf01_book02"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#6DA7F1"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/shelf01_book03"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#BFB74A"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/shelf01_book04"/>
                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#BFB74A"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#F1CDAB"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="데\n뷔\n못\n하\n면\n죽\n는\n병\n걸\n림\n"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#6DA7F1"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#BFB74A"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:rotation="-4"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bookshelf_shelf"
                    android:id="@+id/shelf02">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#F1CDAB"
                        android:layout_marginTop="30dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="데\n뷔\n못\n하\n면\n죽\n는\n병\n걸\n림\n"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#BFB74A"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#6DA7F1"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#BFB74A"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#F1CDAB"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#6DA7F1"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#BFB74A"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:rotation="-4"/>
                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="142dp"
                        android:background="@drawable/bookshelf_book"
                        android:backgroundTint="#6DA7F1"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>