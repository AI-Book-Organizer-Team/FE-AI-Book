<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="17dp"
    android:background="#FAF6F3"
    tools:context=".BookDetailActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="360dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        android:padding="12dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 책 커버와 기본 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:gravity="start">

                <!-- 책 커버 이미지와 책갈피 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="start">

                    <ImageView
                        android:id="@+id/bookCoverImageView"
                        android:layout_width="160dp"
                        android:layout_height="240dp"
                        android:layout_marginStart="100dp"
                        android:elevation="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- 책갈피 아이콘 -->
                    <ImageView
                        android:id="@+id/bookmarkButton"
                        android:layout_width="64dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="-12dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="책갈피 추가"
                        android:elevation="6dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_bookmark"
                        app:layout_constraintEnd_toEndOf="@id/bookCoverImageView"
                        app:layout_constraintTop_toTopOf="@id/bookCoverImageView" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 책 제목/저자와 +/- 버튼을 동일선상에 배치 (좌측 정렬) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 제목과 저자 (좌측) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/bookTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:lineSpacingExtra="4dp"
                            android:text="자유론"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bookAuthorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="존 스튜어트 밀"
                            android:textColor="#666666"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- +/- 버튼들 (우측 동일선상) -->
                    <LinearLayout
                        android:id="@+id/bookshelfButtonsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/addButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="책장에 추가"
                            android:padding="6dp"
                            android:src="@drawable/ic_add_button" />

                        <ImageView
                            android:id="@+id/removeButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="책장에서 제거"
                            android:padding="6dp"
                            android:src="@drawable/ic_remove_button" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="책소개"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="3dp"
                android:text="이 책은 시민과 국가의 관계, 즉 시민의 자유가 어디까지 보장되고, 국가의 간섭은 어디까지 미칠 수 있는지를 다루고 있다."
                android:textColor="#666666"
                android:textSize="15sp" />

            <!-- 도서 정보 (배경 없이) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:baselineAligned="false">
            
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출판사"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/bookPublisherTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="현대지성"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222222" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장르"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/bookGenreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="인문"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222222" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="페이지"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/bookPagesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="256P"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222222" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출시일"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/bookReleaseDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="18.06.01"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222222" />
                </LinearLayout>
                
            </LinearLayout>

            <!-- ISBN 섹션 -->
            <TextView
                android:id="@+id/isbnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ISBN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/isbnTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="9791187142447"
                android:textSize="15sp"
                android:textColor="#444444" />
                
            <!-- 태그 섹션 -->
            <TextView
                android:id="@+id/tagsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="태그"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tagsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="#국내도서 #인문 #철학 #자유 개념 #자유론"
                android:textSize="15sp"
                android:textColor="#444444"
                android:lineSpacingExtra="3dp" />
                
            <!-- 도서 위치 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/locationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도서 위치"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/editLocationIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_edit"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:contentDescription="위치 수정" />

            </LinearLayout>

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="책장 3번째 칸 왼쪽에 있는 책"
                android:textSize="15sp"
                android:textColor="#333333"
                android:padding="4dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>