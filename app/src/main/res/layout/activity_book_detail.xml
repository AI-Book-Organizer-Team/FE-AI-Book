<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="17dp"
    android:background="#FAF6F3"
    tools:context=".BookDetailActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="뒤로가기" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 책 커버와 기본 정보 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/bookCoverImageView"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/bookTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="자유론"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp"
                    app:layout_constraintStart_toEndOf="@id/bookCoverImageView"
                    app:layout_constraintTop_toTopOf="@id/bookCoverImageView"
                    app:layout_constraintEnd_toStartOf="@id/bookshelfButtonsContainer" />

                <TextView
                    android:id="@+id/bookAuthorTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:text="존 스튜어트 밀"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    app:layout_constraintStart_toEndOf="@id/bookCoverImageView"
                    app:layout_constraintTop_toBottomOf="@id/bookTitleTextView"
                    app:layout_constraintEnd_toStartOf="@id/bookshelfButtonsContainer"/>

                <!-- 책장 버튼들 컨테이너 -->
                <LinearLayout
                    android:id="@+id/bookshelfButtonsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@id/bookTitleTextView"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/addButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add_button"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:contentDescription="책장에 추가" />

                    <ImageView
                        android:id="@+id/removeButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_remove_button"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:contentDescription="책장에서 제거" />
                        
                </LinearLayout>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 책 소개 섹션 -->
            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="책소개"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/bookDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="이 책은 시민과 국가의 관계, 즉 시민의 자유가 어디까지 보장되고, 국가의 간섭은 어디까지 미칠 수 있는지를 다루고 있다."
                android:textSize="15sp"
                android:textColor="#666666"
                android:lineSpacingExtra="3dp" />
                
            <!-- 도서 정보 그리드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/book_item_background"
                android:padding="16dp"
                android:baselineAligned="false">
            
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출판사"
                        android:textSize="13sp"
                        android:textColor="#999999" />
                    <TextView
                        android:id="@+id/bookPublisherTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="현대지성"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#333333" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장르"
                        android:textSize="13sp"
                        android:textColor="#999999" />
                    <TextView
                        android:id="@+id/bookGenreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="인문"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#333333" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="페이지"
                        android:textSize="13sp"
                        android:textColor="#999999" />
                    <TextView
                        android:id="@+id/bookPagesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="256P"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#333333" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출시일"
                        android:textSize="13sp"
                        android:textColor="#999999" />
                    <TextView
                        android:id="@+id/bookReleaseDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="18.06.01"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#333333" />
                </LinearLayout>
                
            </LinearLayout>

            <!-- ISBN 섹션 -->
            <TextView
                android:id="@+id/isbnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ISBN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/isbnTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="9791187142447"
                android:textSize="15sp"
                android:textColor="#666666" />
                
            <!-- 태그 섹션 -->
            <TextView
                android:id="@+id/tagsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="태그"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tagsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="#국내도서 #인문 #철학 #자유 개념 #자유론"
                android:textSize="15sp"
                android:textColor="#4CAF50"
                android:lineSpacingExtra="3dp" />
                
            <!-- 도서 위치 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/locationTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="도서 위치"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/editLocationIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_edit"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:contentDescription="위치 수정" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_box"
                android:padding="12dp">
                
                <EditText
                    android:id="@+id/locationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="책장 3번째 칸 왼쪽에 있는 책"
                    android:background="@null"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:textColorHint="#AAAAAA" />
                    
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>