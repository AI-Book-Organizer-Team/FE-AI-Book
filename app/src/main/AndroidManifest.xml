<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FE-AI-Book"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.FE_AI_Book">

        <!-- ✅ 앱 시작: 스플래시 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FE_AI_Book">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인 화면 -->
        <activity android:name=".LoginActivity" android:exported="true" />

        <!-- 홈 화면 (BottomNavigationView) -->
        <activity android:name=".MainHomebarActivity" android:exported="true" android:label="홈" />

        <!-- 기존 MainActivity (필요하면 사용, 아니라면 삭제해도 됨) -->
        <activity android:name=".MainActivity" android:exported="true" />

        <activity android:name=".MemberSignUpActivity" android:exported="true" android:label="@string/signup" />
        <activity android:name=".UserInfoActivity" android:exported="true" />
<!--        <activity android:name=".MyBookRecentActivity" android:exported="true" android:label="책장 페이지" />-->
        <activity android:name=".SearchActivity" android:exported="true" android:label="도서 검색" />
        <activity android:name=".DirectSearchActivity" android:exported="true" android:label="직접 입력하여 찾기" />
        <activity android:name=".AiActivity" android:exported="true" android:label="AI 추천" />
<!--        <activity android:name=".MyBookCategoryActivity" android:exported="false" android:label="카테고리별 보기" />-->
        <activity android:name=".BookDetailActivity" android:exported="false" android:label="도서 상세정보" />
        <activity android:name=".BookShelfActivity" android:exported="false" android:label="책장" />
        <activity android:name=".BarcodeScanActivity" android:exported="true" />
        <activity android:name=".HomeActivity" android:exported="true" android:label="MAIN" />
        <activity android:name=".BarcodeImageTestActivity" />
        <activity android:name=".BookSaveTestActivity" android:exported="true" android:label="도서 저장 테스트" />
        <activity android:name=".MyBookActivity" />



    </application>
</manifest>
